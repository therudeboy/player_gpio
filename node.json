{
    "name": "Schedule/Layout",
    "custom_ui": "config.html",
    "control_ui": "control.html",
    "permissions": {
        "gpio": "Can access GPIO"
    },
    "optional": [
        "COPYRIGHT",
        "NOTES",
        "TODO",
        ".*.md",
        ".*.jpg",
        ".*.js",
        ".*.html",
        ".gitignore"
    ],
    "options": [{
        "title": "Advanced behaviour settings",
        "type": "section",
        "intro": "These settings are not exposed through the normal configuration interface and allow you to specify special settings for advanced use cases."
    }, {
        "title": "Trigger behaviour",
        "ui_width": 4,
        "name": "trigger",
        "type": "select",
        "options": [
            ["next", "Enqueue next match"],
            ["all", "Enqueue all matches"]
        ],
        "default": "next"
    }, {
        "title": "Force schedule reset",
        "ui_width": 8,
        "name": "reset_mode",
        "type": "select",
        "options": [
            ["none", "Never"],
            ["config", "On any config change"],
            ["setup", "When switching from another setup"],
            ["in_forever", "On config change when in 'forever trigger'"]
        ],
        "default": "none"
    },

    {
        "title": "Raw configuration",
        "type": "section",
        "intro": "It's best to leave all the following configuration settings unchanged and to only use the default configuration interface to modify them. Click on the 'Schedule/Layout' area on the left to return to the normal user interface."
    }, {
        "title": "Timezone",
        "ui_width": 4,
        "name": "timezone",
        "type": "string",
        "default": "UTC"
    }, {
        "title": "Simulated Time",
        "ui_width": 4,
        "name": "time",
        "type": "string",
        "hint": "Use for testing. Leave empty to use current time",
        "default": ""
    }, {
        "title": "Rotation",
        "ui_width": 4,
        "name": "rotation",
        "type": "select",
        "options": [
            [0, "None"],
            [90, "90 degree"],
            [180, "180 degree"],
            [270, "270 degree"]
        ],
        "default": 0
    }, {
        "title": "Resolution",
        "ui_width": 4,
        "name": "resolution",
        "type": "select",
        "options": [
            [[3840, 2160], "4K (3840x2160)"],
            [[3840, 1080], "2xFullHD (3840x1080)"],
            [[1920, 2160], "2xFullHD (1920x2160)"],
            [[1920, 1080], "FullHD (1920x1080)"],
            [[1280, 720],  "HD (1280x720)"],
            [[1024, 768],  "XGA(1024x768) 4:3"],
            [[1280, 1024], "SXGA (1280x1024, 5:4)"],
            [[800, 480],   "7inch (800x480)"],
            [[720, 576],   "576p (720x576)"],
            [[1920, 1200], "1920x1200"],
            [[1920, 540],  "1920x540"],
            [[1680, 1050], "1680x1050"],
            [[1366, 768], "1366x768"]
        ],
        "default": [1920, 1080]
    }, {
        "title": "Fallback Asset",
        "ui_width": 4,
        "name": "fallback",
        "type": "resource",
        "valid": ["image", "video"],
        "default": "no-content-info-beamer.jpg"
    }, {
        "title": "Music Asset",
        "ui_width": 4,
        "name": "music",
        "type": "resource",
        "valid": ["video"],
        "default": "mute.mp4"
    }, {
        "title": "Power off",
        "ui_width": 4,
        "name": "poweroff",
        "type": "boolean",
        "default": false
    }, {
        "title": "Background Color",
        "ui_width": 4,
        "name": "background",
        "type": "color",
        "default": [0,0,0,0]
    }, {
        "title": "Scratch",
        "ui_width": 4,
        "name": "scratch",
        "type": "json",
        "default": {}
    },

    {
        "title": "Layouts",
        "name": "layouts",
        "type": "list",
        "itemname": "Layout",
        "items": [{
            "title": "Name",
            "ui_width": 12,
            "name": "name",
            "type": "string",
            "default": "Layout 1"
        }, {
            "title": "Tiles",
            "ui_width": 12,
            "name": "tiles",
            "type": "list",
            "itemname": "Tile",
            "items": [{
                "title": "type",
                "ui_width": 4,
                "name": "type",
                "type": "select",
                "options": [
                    ["image", "Image"],
                    ["video", "Video"],
                    ["rawvideo", "Raw Video"],
                    ["stream", "Stream"],
                    ["browser", "Browser"],
                    ["child", "Child"],
                    ["markup", "Markup"],
                    ["flat", "Flat"],
                    ["time", "Time"],
                    ["countdown", "Countdown"],
                    ["page", "Page Content"]
                ],
                "default": "image"
            }, {
                "title": "Asset",
                "ui_width": 4,
                "name": "asset",
                "type": "resource",
                "valid": ["image", "video", "font", "child"],
                "features": ["hevc", "image4k"],
                "default": "empty.png"
            }, {
                "title": "Config",
                "ui_width": 4,
                "name": "config",
                "type": "json",
                "default": {}
            }, {
              "title": "x1",
              "ui_width": 3,
              "name": "x1",
              "type": "integer",
              "default": 0
          }, {
              "title": "y1",
              "ui_width": 3,
              "name": "y1",
              "type": "integer",
              "default": 0
          }, {
              "title": "x2",
              "ui_width": 3,
              "name": "x2",
              "type": "integer",
              "default": 0
          }, {
              "title": "y2",
              "ui_width": 3,
              "name": "y2",
              "type": "integer",
              "default": 0
          }]
        }]
    },
        
    {
        "title": "Schedules",
        "name": "schedules",
        "type": "list",
        "itemname": "Schedule",
        "items": [{
            "title": "Name",
            "ui_width": 4,
            "name": "name",
            "type": "string",
            "default": "Unnamed schedule"
        }, {
            "title": "Scheduling",
            "ui_width": 4,
            "name": "scheduling",
            "type": "json",
            "default": {
              "hours": []
            }
        }, {
            "title": "Display Mode",
            "ui_width": 4,
            "name": "display_mode",
            "type": "select",
            "options": [
                ["all", "all pages"],
                ["random-1", "one random page"],
                ["random-2", "two random pages"],
                ["random-3", "three random pages"],
                ["random-4", "four random pages"],
                ["random-5", "five random pages"],
                ["random-6", "six random pages"],
                ["random-all", "randomly shuffled pages"]
            ],
            "default": "all"
        }, {
            "title": "Pages",
            "name": "pages",
            "type": "list",
            "itemname": "Page",
            "items": [{
                "title": "Interaction",
                "ui_width": 4,
                "name": "interaction",
                "type": "json",
                "default": {
                  "key": "",
                  "duration": "auto"
                }
            }, {
                "title": "Layout",
                "ui_width": 4,
                "name": "layout_id",
                "type": "integer",
                "default": -1
            }, {
                "title": "Duration",
                "ui_width": 4,
                "name": "duration",
                "type": "float",
                "default": 10
            }, {
                "title": "Auto duration",
                "ui_width": 4,
                "name": "auto_duration",
                "type": "duration",
                "default": 10
            }, {
                "title": "Overlap",
                "ui_width": 4,
                "name": "overlap",
                "type": "duration",
                "default": 0.5
            }, {
                "title": "Tiles",
                "ui_width": 12,
                "name": "tiles",
                "type": "list",
                "itemname": "Tile",
                "items": [{
                    "title": "type",
                    "ui_width": 4,
                    "name": "type",
                    "type": "select",
                    "options": [
                        ["image", "Image"],
                        ["video", "Video"],
                        ["rawvideo", "Raw Video"],
                        ["stream", "Stream"],
                        ["browser", "Browser"],
                        ["child", "Child"],
                        ["markup", "Markup"],
                        ["flat", "Flat"],
                        ["time", "Time"],
                        ["countdown", "Countdown"]
                    ],
                    "default": "image"
                }, {
                    "title": "Asset",
                    "ui_width": 5,
                    "name": "asset",
                    "type": "resource",
                    "valid": ["image", "video", "font", "child"],
                    "features": ["hevc", "image4k"],
                    "default": "empty.png"
                }, {
                    "title": "Config",
                    "ui_width": 3,
                    "name": "config",
                    "type": "json",
                    "default": {}
                }, {
                  "title": "x1",
                  "ui_width": 3,
                  "name": "x1",
                  "type": "integer",
                  "default": 0
              }, {
                  "title": "y1",
                  "ui_width": 3,
                  "name": "y1",
                  "type": "integer",
                  "default": 0
              }, {
                  "title": "x2",
                  "ui_width": 3,
                  "name": "x2",
                  "type": "integer",
                  "default": 0
              }, {
                  "title": "y2",
                  "ui_width": 3,
                  "name": "y2",
                  "type": "integer",
                  "default": 0
              }]
            }]
        }],
        "default": [{
            "name": "My first playlist"
        }]
    }]
}
